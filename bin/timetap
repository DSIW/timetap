
if ARGV.include? '-f'
  go_foreground = true
  ARGV.shift
end

RUBY19 = RUBY_VERSION.to_f >= 1.9

require 'time_tap'



# Try to replace "ruby" with "TimeTap" in the command string (for "ps -A" & co.)
$0 = 'TimeTap'

unless go_foreground
  require 'time_tap/daemon'
  
  pid = fork {
    Process.daemon(true)
    TimeTap.start
  }
else
  puts "going foreground"
  TimeTap.start
end
